<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <fragment android:name="com.cristovaotrevisan.betterbets.MenuFragment"
          android:id="@+id/menu_fragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
    <fragment android:name="com.cristovaotrevisan.betterbets.LoginFragment"
          android:id="@+id/login_fragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
    <fragment android:name="com.cristovaotrevisan.betterbets.CreateBetFragment"
          android:id="@+id/create_bet_fragment"
          android:layout_width="match_parent"
          android:layout_height="match_parent" />
</LinearLayout>